  <body class="container">
    <header style="max-width: none;"><%- include('../partials/header'); %></header>
    <main ><div class="jumbo">
    <h5>Quelles ingrédients avez vous?<select
        name="ingredients"
        id="ingredients"
        data-placeholder="Selectionnez vos ingrédients"
        multiple
        class="chosen-select"
        tabindex="8"
      ><% for(var i=0; i<ingredients.length; i++) {%>
        <option value="<%=ingredients[i].cle_api%>" ><%= ingredients[i].aliment %></option>
        <% } %>
      </select>
    </h5>
    <button class="btn btn-primary" data-toggle="modal" data-target="#ModalIngredients" onclick="recommanderRecettes('<%=exigencesUtilisateur%>')">recommender des recettes</button>
       <div class="container" id="recettes">
      <!-- Modal -->
  <div class="modal fade bd-example-modal-lg" id="ModalIngredients" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Bienvenue!</h5>
        </div>
        <div class="modal-body">
            <h5>Voulez-vous stocker ces ingredients? </h5>       
            <div style="display:block;">
            <button onclick="stockerIngredients()" type="button" class="btn btn-secondary" data-dismiss="modal">Oui</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
          </div>
    </div>  
  </main>
