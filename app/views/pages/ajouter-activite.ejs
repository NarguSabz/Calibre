
<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Ajouter une activité</h1>
            <form action="/ajouter-activite" method="POST">
                <div class="form-group">
                    <label for="titre_activite">Title</label>
                    <input class="form-control" id="titre_activite" name="titre_activite" required>
                    </input>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" name="description">

                    </input>
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input class="form-control" id="date" name="date">
                    </input>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter l'activité</button>
            </form>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>
    </body>

</html>